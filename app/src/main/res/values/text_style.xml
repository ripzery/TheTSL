<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fontTitleLight">
        <item name="fontPath">fonts/samakarn/Samakarn-Light.ttf</item>
    </style>

    <style name="fontContent">
        <item name="fontPath">fonts/cmprasanmit/CmPrasanmit.ttf</item>
    </style>

    <style name="BasicText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BasicText.White">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="BasicText.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="itemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- style text input layout -->
    <style name="TextInputStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <!--<item name="android:textColorHint">@color/Color Name</item>-->
        <!--<item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>